.navbar.navbar-default
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/')
    .collapse.navbar-collapse
      ul.nav.navbar-nav.navbar-right
        li(class=title=='About'?'active':undefined)
          a(href='/about') About
        li(class=title=='Contact'?'contact':undefined)
          a(href='/contact') Are you an agency?
        if !user
          if displayCart
            li.cartButton
              a(href="#toggleCart" class="toggleCart" id="toggleCart")
                i.fa.fa-shopping-cart
        else
          li.adminLink
            a(href="/admin" class="adminLink" id="adminLink") Admin
          li.dropdown(class=title=='Account Management'?'active':undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              | #{ user.email || user.id}&nbsp;
              i.caret
            ul.dropdown-menu
              li: a(href='/logout') Logout
