include mixins/forms.jade
include mixins/search.jade

extends layout

block content
  div.search-intro.results These are the programs you have selected to request more information about:
  div.opportunities-container
    +renderResultList(pickedResults)
  div.send-request-container
    h3.additional-info We need some additional information about you to send to the agencies that own the programs you have selected. This information will be stored safely and will not be used for any other purpose.
    form#sendRequestForm(action='/sendlead' method="POST")
      each fieldSet, fieldSetIndex in form.fields
        h3= form.options.fieldSets[ fieldSetIndex ].label
        fieldset
          each fieldSetField, fieldSetFieldIndex in fieldSet
            +makeField(fieldSetField)
