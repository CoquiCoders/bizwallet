extends ../layout

block content
  #list
    #list-top
      h2= title
      #Nuevo
        a.btn.btn-default(href="#{base}#{path}/new", role="button") Nuevo +

    table.table.table-striped.table-hover.table-condensed.admin
      thead
        tr
          th
            | Cliquea para editar / borrar
          each field in fields
            th= field
      tbody.admin
        if (data)
          each entry in data
            tr
              td
                a.btn.btn-default.admin-edit(href="#{base}#{path}/#{entry.id}/edit") editar
                a.btn.btn-default.delete-model.admin-edit(href="#{base}#{path}/#{entry.id}/delete") borrar
              each field, fieldIndex in fields
                if fieldIndex == 'title'
                  td
                    a(href="#{base}#{path}/#{entry.id}")= entry.get(fieldIndex)
                else
                  td= entry.get(fieldIndex)
